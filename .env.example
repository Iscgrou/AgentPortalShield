# نمونه تنظیمات محیطی (بدون اطلاعات حساس)
# این فایل را به نام .env کپی کنید و مقادیر را تکمیل نمایید

# اتصال پایگاه داده PostgreSQL
# فرمت: postgresql://USER:PASSWORD@HOST:PORT/DB_NAME
DATABASE_URL=postgresql://marfanet:strong-password@localhost:5432/marfanet

# کلیدها و تنظیمات امنیتی
SESSION_SECRET=change-me-in-production
NODE_ENV=production
PORT=3000

# تنظیمات اختیاری
# کلید سرویس هوش مصنوعی گوگل جمینی (در صورت نیاز)
GEMINI_API_KEY=

# تنظیمات ربات تلگرام (اختیاری)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
