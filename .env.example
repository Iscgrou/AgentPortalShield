# نمونه تنظیمات محیطی (بدون اطلاعات حساس)
# این فایل را به نام .env کپی کنید و مقادیر را تکمیل نمایید

# اتصال پایگاه داده PostgreSQL  
# فرمت: postgresql://USER:PASSWORD@HOST:PORT/DB_NAME
# برای Neon PostgreSQL از SSL استفاده کنید
DATABASE_URL=postgresql://username:password@host:5432/database?sslmode=require

# کلیدها و تنظیمات امنیتی
SESSION_SECRET=change-me-in-production-use-strong-random-key
NODE_ENV=development
PORT=5000

# تنظیمات Session و Timeout (اختیاری)
SESSION_IDLE_TIMEOUT_MS=1800000
SESSION_ABSOLUTE_TIMEOUT_MS=604800000

# تنظیمات اختیاری - AI Services
# کلید سرویس هوش مصنوعی گوگل جمینی (در صورت نیاز)
GEMINI_API_KEY=

# کلید سرویس OpenAI/XAI Grok (در صورت نیاز) 
XAI_API_KEY=

# تنظیمات ربات تلگرام (اختیاری)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# درگاه مدیر CRM (برای قفل/بازقفل تنظیمات)
# حتماً در محیط‌های واقعی مقدار قوی تنظیم شود
CRM_MANAGER_PASSWORD=
# TTL قفل مدیر به میلی‌ثانیه (پیش‌فرض 1800000 = 30 دقیقه)
CRM_MANAGER_UNLOCK_TTL_MS=1800000
